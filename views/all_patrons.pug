doctype html
html
	head
		title Patrons
		link(rel='stylesheet', href='/style.css')
	nav
		ul
			li
				a(href='../') Home
			li
				a(href='books') Books
			li
				a(href='patrons') Patrons
			li
				a(href='loans') Loans
	body
		h1 Patrons
		p
			a.button(href='patrons/new') Create New Patron
		table
			thead
				tr
					th Name 
					th Address
					th Email
					th Library ID
					th Zip
			tbody
				each patron in patrons
					tr
						td
							a(href="/patrons/" + patron.id) #{patron.first_name} #{patron.last_name}
						td #{patron.address}
						td #{patron.email}
						td #{patron.library_id}
						td #{patron.zip_code}